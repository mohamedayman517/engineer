# Port for the server (Railway will set this automatically)
PORT=5000

# MongoDB connection string (for Railway, you'll need to add MongoDB service)
MONGODB_URI=mongodb://127.0.0.1:27017/architectbot

# For production on Railway, you'll need to:
# 1. Add MongoDB service to your Railway project
# 2. Set MONGODB_URI to the connection string provided by Railway
# Example: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/architectbot

# JWT Secret
JWT_SECRET=your-secret-key-here

# Email Configuration (for contact form)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
